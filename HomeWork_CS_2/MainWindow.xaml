<Window x:Class="HomeWork_CS_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork_CS_2"
        mc:Ignorable="d"
        Title="Картотека" Height="536" Width="600" MinWidth="700" MaxWidth="700" MinHeight="500" MaxHeight="900">
    <Grid Margin="0,0,-0.4,2.4">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TabControl Margin="5,10,5,0">
            <TabItem Header="Данные">
                <Grid Background="#FFE5E5E5" Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="36"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="dgEmloyeeList" SelectionUnit="Cell"  RowDetailsVisibilityMode="VisibleWhenSelected" IsReadOnly="True" Margin="10,6,10.4,10" AutoGenerateColumns="false"  Grid.Row="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Имя сотрудника" Binding="{Binding Name}" Width="*" />
                            <DataGridTextColumn Header="Фамилия сотрудника" Binding="{Binding SName}" Width="*" />
                            <DataGridComboBoxColumn x:Name="dataGridComboBox" Header="Отдел сотрудника" SelectedValueBinding="{Binding Path=GetDepName}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="Open" Content="Открыть" HorizontalAlignment="Left" Margin="10,9,0,0" Width="87" Click="Open_Click" Height="19" VerticalAlignment="Top"/>
                    <Button x:Name="Save" Content="Сохранить как" HorizontalAlignment="Left" Margin="124,9,0,0" Width="87" Click="Save_Click" Height="19" VerticalAlignment="Top"/>
                    <Button x:Name="Red" Content="Резрешить редактирование" HorizontalAlignment="Left" Margin="267,9,0,0" Width="165" Click="Red_Click" Height="19" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            
            <TabItem Header="Добавление">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="469"/>
                    </Grid.RowDefinitions>
                    <GroupBox Header="Добавление сотрудника" HorizontalAlignment="Stretch"  Margin="0" VerticalAlignment="Top" Height="160" >
                        <Grid >
                            <ComboBox x:Name="cbAddDepartment" 
                        HorizontalAlignment="Left"  Height="23" Width="156" VerticalAlignment="Top" Margin="63,66,0,0" ToolTip="Отдел нового сотрудника" >
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"   />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Label Content="Отдел:" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top" Height="23" Width="48"/>
                            <TextBox x:Name="tbAddName" Foreground="Gray" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Width="209"  GotFocus="tbAddName_GotFocus" LostFocus="tbAddName_LostFocus"/>
                            <TextBox x:Name="tbAddSName" Foreground="Gray" HorizontalAlignment="Left" Height="23" Margin="10,38,0,0" TextWrapping="Wrap" Text="Фамилия" VerticalAlignment="Top" Width="209" RenderTransformOrigin="-0.933,-0.643" GotFocus="tbAddSName_GotFocus" LostFocus="tbAddSName_LostFocus"/>
                            <Button x:Name="btnAddEmployee" Content="Добавить" HorizontalAlignment="Left" Margin="10,109,0,0" Width="87" Click="btnAddEmloyee_Click" Height="23" VerticalAlignment="Top" ToolTip="Добавить нового сотрудника"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Добавление отдела" HorizontalAlignment="Stretch" Margin="0,165,0,0" Height="160" VerticalAlignment="Top">
                        <Grid>
                            <TextBox x:Name="tbAddNewDepartment" Foreground="Gray" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="Название отдела" VerticalAlignment="Top" Width="209" LostFocus="tbAddNewDepartment_LostFocus" GotFocus="tbAddNewDepartment_GotFocus"/>
                            <Button x:Name="btnAddDepartment" Content="Добавить" HorizontalAlignment="Left" Margin="10,58,0,0" Width="87" Click="btnAddDepartment_Click" Height="23" VerticalAlignment="Top" ToolTip="Добавить новый отдел"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            
        </TabControl>
    </Grid>
</Window>